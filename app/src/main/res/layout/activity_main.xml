            android:layout_margin="15dp"
            android:contentDescription="TODO"
            android:onClick="dropIn"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/r12"
            android:layout_width="90dp"
            android:layout_height="90dp"
